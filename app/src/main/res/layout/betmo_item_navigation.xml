<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <betmo.com.betmo.view.ComfortaaTextView
        android:id="@+id/betmo_navigation_drawer_text"
        android:paddingLeft="@dimen/betmo_navigation_padding"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="italic"
        android:textColor="@color/betmo_color_default_textcolor"
        android:textSize="@dimen/betmo_navigation_drawer_item_textsize"
        android:drawablePadding="@dimen/betmo_navigation_drawer_item_icon_left_padding"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/betmo_color_navigation_bar_item_divider"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>