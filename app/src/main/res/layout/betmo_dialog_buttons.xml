<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surprise_color_pinoyhenyo_common_background_gray_transparent">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttons_close"
        android:background="@drawable/betmo_close"
        android:textColor="@color/betmo_color_default_textcolor"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/buttons_info"
        android:background="@drawable/info"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttons_close"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttons_bet"
        android:background="@drawable/bet"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttons_close"
        android:layout_alignLeft="@+id/buttons_close"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/buttons_comment"
        android:background="@drawable/comment"
        android:textColor="@color/betmo_color_default_textcolor"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttons_close"
        android:layout_alignRight="@+id/buttons_close"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"/>
</RelativeLayout>