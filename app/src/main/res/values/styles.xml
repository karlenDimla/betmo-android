<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.HomeActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/surprise_style_actionbar</item>
        <item name="actionBarStyle">@style/surprise_style_actionbar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_launcher</item>
        <item name="homeAsUpIndicator">@drawable/ic_launcher</item>
    </style>

    <style name="surprise_style_actionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/betmo_color_actionbar</item>
        <item name="background">@color/betmo_color_actionbar</item>
        <item name="android:titleTextStyle">@style/surprise_style_actionbar_title_text</item>
        <item name="titleTextStyle">@style/surprise_style_actionbar_title_text</item>
    </style>

    <style name="surprise_style_actionbar_title_text" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/betmo_color_default_textcolor</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:paddingRight">5dp</item>
    </style>


    <style name="surprise_style_fullscreen" parent="@android:style/Theme.NoTitleBar.Fullscreen"/>


</resources>
